<h1>Eat-Da-Burger</h1>

<img src="assets/img/burger.png" alt="Burger logo">

<div class="container">

  <div class="row">

    <div class="col-md-3 col-md-offset-2">
      <h2>Burger Menu</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            
            <div class="burgerText">
              {{this.burger_name}}
            </div>

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour!</button>
            </form>

            
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-3 col-md-offset-2">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}

            <div class="burgerText">
              {{this.burger_name}}
            </div>

          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row">
    <div class="addBurger">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <input type="text" id="new_burger" name="burger_name" placeholder=" Add Burger">
          <button type="submit">Submit</button>
        </div>
        
      </form>
    </div>
  </div>

</div>


